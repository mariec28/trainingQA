<h1> Edit Employee </h1>
<%= form_with(model: @employee) do |form| %>
  <div class="field ">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field ">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field ">
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>

  <div class="field ">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field ">
    <%= form.label :salary %>
    <%= form.text_field :salary %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', employees_path %>
